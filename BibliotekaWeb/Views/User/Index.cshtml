@using BibliotekaWeb.Areas.Identity.Data
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Users";
}
@model ICollection<ApplicationUser>

<div class="container p-3 row pt-4 col-6">
    <h1 class="text-primary">Users</h1>
</div>

<br />

<div>

    @if (@Model != null && @Model.Any())
    {
        <table class="table table-bordered text-white table-striped" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">User ID</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="text-center">
</div>